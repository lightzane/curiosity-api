													"const ObjectId = (\r",
													"    d = Date,\r",
													"    m = Math,\r",
													"    h = 16,\r",
													"    x = (n) => m.floor(n).toString(h),\r",
													"  ) => x(d.now() / 1000) + ' '.repeat(h).replace(/./g, () => x(m.random() * h))\r",
													"\r",
													"const random = ObjectId().substring(8,13)\r",
													"\r",
													"pm.environment.set('username', 'User'.concat(random))"
												],
												"type": "text/javascript"
											}
										}
